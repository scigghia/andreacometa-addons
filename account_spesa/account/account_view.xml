<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="account_spesa_tree" model="ir.ui.view">
        <field name="name">account.spesa.tree</field>
        <field name="model">account.spesa</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Expenses">
                <field name="name"/>
                <field name="type"/>
                <field name="account_id"/>
                <field name="price"/>
                <field name="tax_id"/>
            </tree>
        </field>
    </record>
    
    <record id="account_spesa_form" model="ir.ui.view">
        <field name="name">account.spesa.form</field>
        <field name="model">account.spesa</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Expenses">
                <field name="name" colspan="2" required="1"/>
                <field name="type" colspan="2" required="1"/>
                <field name="account_id" colspan="2"/>
                <field name="price" colspan="2"/>
                <field name="tax_id" colspan="2"/>
            </form>
        </field>
    </record>

    <record id="account_spesa_filter" model="ir.ui.view">
        <field name="name">account.spesa.filter</field>
        <field name="model">account.spesa</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Expenses">
               <field name="name"/>
           </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_spesa">
        <field name="name">Expenses</field>
        <field name="res_model">account.spesa</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="account_spesa_tree"/>
        <field name="search_view_id" ref="account_spesa_filter"/>
    </record>

    <menuitem name="Expenses" parent="account.menu_configuration_misc" action="action_account_spesa" id="menu_account_spesa"/>
    
    <record id="view_payment_term_line_spesa_form" model="ir.ui.view">
		<field name="name">account.payment.term.line.spesa.form</field>
		<field name="model">account.payment.term.line</field>
		<field name="inherit_id" ref="account.view_payment_term_line_form"/>
		<field name="arch" type="xml">
			<field name="value_amount" position="after">
				<field name="spesa_id" />
			</field>
		</field>
	</record>

</data>
</openerp>
